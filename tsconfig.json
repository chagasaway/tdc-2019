{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./packages",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": ".build",
    "sourceMap": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": [
    "**/node_modules/*"
  ]
}