{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": ".build",
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "common/*": [
        "common/*"
      ],
      "modules/*": [
        "modules/*"
      ],
      "navigation/*": [
        "navigation/*"
      ],
      "typings/*": [
        "typings/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/node_modules/*"
  ]
}